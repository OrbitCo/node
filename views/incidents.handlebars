<div class="left-column">

    <!-- Navbar -->
    {{> menu}}

    <!-- Contact Form Title -->
    <div class="tittle-container text-center">
        <h2 class="tittle">Incidents </h2>
    </div>

    <div class="table-responsive-lg">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Application</th>
                <th scope="col">Api</th>
                <th scope="col">Error Code</th>
                <th scope="col">Status</th>
            </tr>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td><a href="/incident/{{this.id}}">{{this.incidentNumber}}</a></td>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.application}}</td>
                    <td>{{this.api}}</td>
                    <td>{{this.errorCode}}</td>
                    <td>{{this.status}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>